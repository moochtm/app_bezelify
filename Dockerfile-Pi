FROM debian:stretch-slim

RUN apt-get update && apt-get -y dist-upgrade
RUN apt-get -y install build-essential libssl-dev libffi-dev python3.7 libblas3 libc6 liblapack3 gcc python3-dev python3-pip cython3
RUN apt-get -y install python3-numpy

# RUN apt-get -y install build-essential

# install PIL dependencies
#RUN apt-get update && apt-get install -y \
#        python-dev python-pip python-setuptools \
#        libffi-dev libxml2-dev libxslt1-dev \
#        libtiff4-dev libjpeg8-dev zlib1g-dev libfreetype6-dev \
#        liblcms2-dev libwebp-dev tcl8.5-dev tk8.5-dev python-tk

RUN pip3 install pipenv

ENV PROJECT_DIR /usr/src/app

WORKDIR ${PROJECT_DIR}

COPY Pipfile .
COPY Pipfile.lock .
COPY . .

RUN pipenv install --deploy --ignore-pipfile

EXPOSE 5000

CMD ["pipenv", "run", "python", "run.py"]
